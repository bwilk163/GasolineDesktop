      xmlns:local="clr-namespace:GasolineDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Margin="10,0,0,0">

        <Label Content="Nazwa stacji" HorizontalAlignment="Left" VerticalAlignment="Top" Width="122" Height="32" Margin="40,96,0,0"/>

