        <TextBox x:Name="station_postalcode" HorizontalAlignment="Left" Height="23" Margin="162,174,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
        <TextBox x:Name="station_street" HorizontalAlignment="Left" Height="23" Margin="162,212,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
